@page
@model DetailsModel

@{
  ViewData["Title"] = "Details";
}

<h1>TODO: Names des Autors</h1>

<h4>Bücher:</h4>
<table class="table">
  <thead>
    <tr>
      <th>
        Titel
      </th>
      <th>
        Isbn
      </th>
      <th>
        Verlag
      </th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model.AuthorInfo.Books)
      {
          <tr>
              <td>
                  @Html.DisplayFor(modelItem => item.Title)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Isbn)
              </td>
              <td>
                  @Html.DisplayFor(modelItem => item.Publishers)
              </td>

          </tr>
      }
</table>
<div>
  <a asp-page="../Index">Zurück zur Liste</a>
</div>
